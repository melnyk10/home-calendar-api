# Make this the root for Lombok settings
config.stopBubbling = true

# Mark Lombok-generated code so tools can filter it out
lombok.addLombokGeneratedAnnotation = true

# Safer defaults for entity hierarchies: never auto-call super in equals/hashCode/toString
# (You can override per-class with @EqualsAndHashCode(callSuper = true) etc.)
lombok.equalsAndHashCode.callSuper = SKIP
lombok.toString.callSuper = SKIP